{
  "name": "cynosure",
  "version": "1.0.0",
  "description": "Claude Code MAX Bridge - OpenAI API compatible proxy for Claude Code SDK",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "npx tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:e2e": "vitest run tests/e2e",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t cynosure .",
    "docker:run": "docker run -p 3000:3000 cynosure"
  },
  "keywords": [
    "claude",
    "openai",
    "api",
    "proxy",
    "bridge",
    "ai",
    "anthropic"
  ],
  "author": "Cynosure Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "pino": "^8.19.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
